<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="datepickertextbox_base" TargetType="DatePickerTextBox">
        <Setter Property="FontFamily" Value="NotoSansCJKkr" />
    </Style>

    <Style TargetType="DatePickerTextBox" BasedOn="{StaticResource datepickertextbox_base}">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Foreground" Value="#182233" />
        <Setter Property="Background" Value="Transparent" />
    </Style>
</ResourceDictionary>